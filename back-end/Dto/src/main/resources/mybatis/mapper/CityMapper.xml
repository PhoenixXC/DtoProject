<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xcphoenix.dto.mapper.CityMapper">

	<resultMap id="cityResult" type="com.xcphoenix.dto.bean.City">
		<id column="_id" property="id" />
		<result column="name" property="name" />
		<result column="city_id" property="cityId" />
		<result column="province_id" property="provinceId" />
		<collection property="countries" column="city_id"
		            select="com.xcphoenix.dto.mapper.CountryMapper.selectByCityId"/>
	</resultMap>
	
	<select id="selectByProvinceId" resultMap="cityResult" parameterType="string">
		SELECT _id, name, city_id, province_id FROM city WHERE province_id = #{provinceId}
	</select>
	
</mapper>